<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#E8F5E9"
    tools:context=".PedidoExitosoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✅"
        android:textSize="80sp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Pedido Recibido!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La cocina ha comenzado a preparar tus alimentos. Por favor espera tu llamado."
        android:textSize="18sp"
        android:textColor="#555555"
        android:textAlignment="center"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnNuevoPedido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Hacer Nuevo Pedido"
        android:textSize="18sp"
        android:backgroundTint="#2E7D32"/>

</LinearLayout>